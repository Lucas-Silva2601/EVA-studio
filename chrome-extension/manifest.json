{
  "manifest_version": 3,
  "name": "EVA Studio Bridge",
  "version": "1.1.0",
  "description": "Ponte de comunicação entre a IDE EVA Studio e o Google AI Studio (Agente Programador).",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*",
    "https://aistudio.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["content-ai-studio.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*"
      ],
      "js": ["content-ide.js"],
      "run_at": "document_idle"
    }
  ]
}
